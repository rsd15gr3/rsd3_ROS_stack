<!-- -->
<launch>
  <arg name="camera_name" value="creative_hd" />
  <node pkg="video_stream_opencv" type="video_stream" name="$(arg camera_name)_streamer" output="screen"> 
  	<remap from="camera" to="image_raw" />
  	<param name="camera_name" type="string" value="$(arg camera_name)" />
    <param name="video_stream_provider" type="string" value="1" />
    <param name="fps" type="int" value="30" />
    <param name="frame_id" type="string" value="camera_link" />
    <param name="camera_info_url" value="package://video_stream_opencv/config/creative_hd.yaml" />
    <param name="flip_horizontal" type="bool" value="false" />
    <param name="flip_vertical" type="bool" value="false" />
    <rosparam> image_transport: raw </rosparam> <!--  compressed compressed  -->
  </node>
  <arg name="visualize" default="false"/>
  <node if="$(arg visualize)" name="$(arg camera_name)_image_view" pkg="image_view" type="image_view">
  	<remap from="image" to="image_raw" />
  </node>
</launch>
